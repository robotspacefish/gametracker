 <% if logged_in? %>
    <p>You are logged in as <%= current_user.username %><p>
    <a href="/logout" class="btn">Log out</a>

  <% else %>

    <% if request.path != "/login" %>
      <a href="/login">Log in</a>
      <% if request.path != "/signup" %>
        <a href="/signup">Sign Up</a>
      <% end %>
    <% end%>

  <% end %>