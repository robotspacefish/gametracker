<main>
  <div class="games">
  <h2>Games Users Have Previously Searched For</h2>
    <% @games.each do |game| %>
      <div class="game">
        <!-- TODO  add game form -->
        <!-- TODO show game image -->
        <a href="<%= game.slug %>"><%= game.title %></a> (Owned By <%= game.users.length %> Users) <%= "[You Own This]" if current_user.games.include?(game) %>

        <% if !current_user.games.include?(game) %>
          <form action="/games/add_existing_game" method="POST">
            <input type="hidden" name="game[id]" value="<%= game.id %>">
            <input type="submit" value="Add to Library">
          </form>
        <% end %>
      </div>
    <% end %>
  </div>
</main>