<main>
  <div class="games">
    <% if @games.empty? %>

      <h2>Games will show up here once users start adding them to their libraries!</h2>

    <% else %>

      <% @games.each do |game| %>

        <div class="game">
          <a href="<%= game.slug %>"><%= game.title %></a>
        </div>

      <% end %>
    <% end %>
  </div>
</main>