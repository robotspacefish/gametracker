<main class="page_games-home">
  <%= erb :'/partials/_flash' %>

  <div class="games">
    <% if @games.empty? %>

      <h2>Games will show up here once users start adding them to their libraries!</h2>

    <% else %>

      <h2>Games Owned By Users</h2>

      <% @games.each do |game| %>
        <%= erb :'/partials/_game_cards', locals: { game: game, platforms: game.platforms } %>
      <% end %>

    <% end %>
  </div>
</main>