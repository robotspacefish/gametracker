
 <% if @user_has_game %>
    <h2>You already have <%= @existing_game.title %> in your library.</h2>
 <% else %>
   <h2>This game already exists.<h2>
    <div class="games-container">

      <%= erb :'/partials/_game_cards', locals: { game: @existing_game, platforms: @existing_game.platforms } %>

    </div>
 <% end %>

<br>
<a href="/games">Add a Different Game</a>
